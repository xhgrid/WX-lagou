/* pages/login/login.wxss */
.login{
    width: 80%;
    height: 560px;
    margin: 0 auto;
    padding: 38px;
}
.login-text{
    width: 100px;
    height: 40px;
    line-height: 40px;
    display: inline-block;
    font-size: 20px;
    font-weight: 600;
    letter-spacing: 1px;
    margin-bottom: 20px;
}
.login-ipt{
    margin-top: 20px;
}
.ipt-name{
    margin-top: 20px;
    border-bottom: 1px solid #e0e0e0;
    height: 50px;
    line-height: 40px;
    font-size: 16px;
}
.ipt-go{
    margin-top: 40px;
    background-color: #2bc998;
    color: white
}
.ipt-go::after{
    border: none
}
.wxlogin{
    width: 69%;
    position: absolute;
    bottom: 40px;
    text-align: center;
    left: 50%;
    margin-left: -130px;
}
.info-center{
    height: 40px;
    line-height: 40px;
    font-size: 11px;
}
.center-txt{
    color: #555;
}
.center-xian{
    display: inline-block;
    width: 40px;
    border-bottom: 1px solid #d7d7d7;
    margin-right: 30px;
    margin-bottom: 3px;
}
.center-xian1{
    display: inline-block;
    width: 40px;
